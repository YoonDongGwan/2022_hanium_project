<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.hanium.SJnJH.StoreActivity">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="58dp"
        app:layout_constraintBottom_toTopOf="@+id/startBt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/storeIv"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ddd" />

            <TextView
                android:id="@+id/storeTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/storeIv"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="교촌치킨"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="35sp"
                android:textStyle="bold" />

            <!--    <TextView-->
            <!--        android:gravity="center"-->
            <!--        android:layout_width="match_parent"-->
            <!--        android:layout_height="wrap_content"-->
            <!--        android:id="@+id/reviewTv"-->
            <!--        android:text="이 자리에 리뷰"-->
            <!--        android:layout_marginTop="15dp"-->
            <!--        android:layout_below="@+id/storeTv"-->
            <!--        android:textStyle="bold"-->
            <!--        android:textSize="20sp"/>-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageButton

                    android:id="@+id/callBt"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_below="@+id/reviewTv"
                    android:background="@drawable/ic_baseline_call_24" />

                <TextView
                    android:id="@+id/callTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/reviewTv"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/callBt"
                    android:text="전화"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/heartBt"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_below="@+id/reviewTv"
                    android:layout_marginLeft="50dp"
                    android:layout_toRightOf="@+id/callTv"
                    android:background="@drawable/ic_baseline_favorite_border_24" />

                <TextView
                    android:id="@+id/heartTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/reviewTv"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/heartBt"
                    android:text="찜"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/shareBt"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_below="@+id/reviewTv"
                    android:layout_marginLeft="50dp"
                    android:layout_toRightOf="@+id/heartTv"
                    android:background="@drawable/ic_baseline_share_24" />

                <TextView
                    android:id="@+id/shareTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/reviewTv"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/shareBt"
                    android:text="공유"
                    android:textSize="22sp"
                    android:textStyle="bold" />

            </LinearLayout>


            <Button

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/callBt"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:backgroundTint="@color/mainColor"
                android:paddingLeft="40dp"
                android:paddingTop="20dp"
                android:paddingRight="40dp"
                android:paddingBottom="20dp"
                android:text="디자이너 수정 부탁드려요"
                android:textColor="@color/white"
                android:textSize="20sp"
                tools:layout_editor_absoluteX="77dp"
                tools:layout_editor_absoluteY="241dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/startBt"
                android:layout_marginTop="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/startBt" />


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


    <Button
        android:id="@+id/startBt"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/nest"
        android:background="@color/mainColor"
        android:gravity="center"
        android:text="하이"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>