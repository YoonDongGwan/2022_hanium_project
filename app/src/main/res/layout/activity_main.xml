<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.MainActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        >
        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/myPageBtn"
            android:src="@drawable/ic_baseline_person_24"
            android:backgroundTint="@color/transparent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/searchBtn"
            android:src="@drawable/ic_baseline_search_24"
            android:backgroundTint="@color/transparent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/myPageBtn"
            app:layout_constraintBottom_toBottomOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="인기 순위"
                android:textStyle="bold"
                android:textSize="25sp"
                android:layout_marginLeft="20dp"
                />
            <androidx.viewpager2.widget.ViewPager2
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="10dp"
                android:id="@+id/home_viewpager"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="30dp"
                    >
                    <Button
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:drawableTop="@drawable/ic_baseline_menu_book_24"
                        android:id="@+id/home_list_btn1"
                        android:background="@color/transparent"
                        android:text="책"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:textColor="@color/mainColor"
                        android:layout_weight="1"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        />
                    <Button
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/home_list_btn2"
                        android:drawableTop="@drawable/ic_baseline_laptop_mac_24"
                        android:background="@color/transparent"
                        android:text="전자제품"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:textColor="@color/mainColor"
                        android:layout_weight="1"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"/>
                    <Button
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/home_list_btn3"
                        android:background="@color/transparent"
                        android:drawableTop="@drawable/ic_baseline_brush_24"
                        android:text="필기구"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:textColor="@color/mainColor"
                        android:layout_weight="1"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"/>
                    <Button
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/home_list_btn4"
                        android:background="@color/transparent"
                        android:drawableTop="@drawable/ic_baseline_cleaning_services_24"
                        android:text="생활용품"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:textColor="@color/mainColor"
                        android:layout_weight="1"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="30dp"
                    >
                    <Button
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:id="@+id/home_list_btn5"
                        android:background="@color/transparent"
                        android:drawableTop="@drawable/ic_baseline_eco_24"
                        android:text="식재료"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:textColor="@color/mainColor"
                        android:layout_weight="1"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        />
                    <Button
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:id="@+id/home_list_btn6"
                        android:background="@color/transparent"
                        android:drawableTop="@drawable/ic_baseline_checkroom_24"
                        android:text="의류"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:textColor="@color/mainColor"
                        android:layout_weight="1"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"/>
                    <Button
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:id="@+id/home_list_btn7"
                        android:background="@color/transparent"
                        android:drawableTop="@drawable/ic_baseline_handshake_24"
                        android:text="중고"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:textColor="@color/mainColor"
                        android:layout_weight="1"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"/>
                    <Button
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:id="@+id/home_list_btn8"
                        android:background="@color/transparent"
                        android:drawableTop="@drawable/ic_baseline_delivery_dining_24"
                        android:text="배달"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:textColor="@color/mainColor"
                        android:layout_weight="1"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"/>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="추천 목록"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginLeft="20dp"
                />
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/home_recyclerview"
                android:layout_marginTop="10dp"
                />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>