<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ProductActivity">
    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/product_back_btn"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:backgroundTint="@color/transparent"
        android:src="@drawable/ic_baseline_arrow_back_24"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/product_img"
        app:layout_constraintTop_toBottomOf="@+id/product_back_btn"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/product_text1"
        android:textSize="12sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:text="인천대학교 '컴퓨터 네트워크' 과목에서 사용합니다."
        app:layout_constraintTop_toBottomOf="@+id/product_img"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textStyle="bold"
        android:textColor="#FFC107"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/product_book_name"
        android:textColor="@color/black"
        android:text="컴퓨터 네트워크"
        android:textStyle="bold"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/product_text1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/product_text1"
        app:layout_constraintRight_toLeftOf="@+id/product_ratings"
        android:src="@drawable/ic_baseline_star_24"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/product_ratings"
        android:textColor="@color/black"
        android:text="4.5/5.0"
        android:textStyle="bold"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/product_text1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/product_text2"
        app:layout_constraintTop_toBottomOf="@+id/product_book_name"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="00,000 원"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/product_text3"
        app:layout_constraintTop_toBottomOf="@+id/product_text2"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="책 정보"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/product_text3"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Ch01 ~~~~~~ \nCh02 ~~~~~~ \nCh03 ~~~~~~ \nCh04 ~~~~~~ \nCh05 ~~~~~~ \nCh06 ~~~~~~ \n"

        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        <Button
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginRight="5dp"
            android:background="@color/mainColor"
            android:textColor="@color/white"
            android:text="1인 구매"
            android:textStyle="bold"
            android:layout_weight="1"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="@color/mainColor"
            android:textColor="@color/white"
            android:text="3인 공동구매"
            android:textStyle="bold"
            android:layout_weight="2"
            />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>